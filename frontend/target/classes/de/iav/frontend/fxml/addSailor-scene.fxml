<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="780.0" prefWidth="780.0" spacing="10.0" xmlns="http://javafx.com/javafx/19.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.iav.frontend.controller.AddSailorController">
    <children>
        <Button onAction="#switchToMainScene" text="zurück">
            <VBox.margin>
                <Insets top="25.0" />
            </VBox.margin>
        </Button>
        <Label text="Bitte Deine Daten eingeben" textAlignment="CENTER">
            <font>
                <Font name="Comic Sans MS" size="16.0" />
            </font>
            <VBox.margin>
                <Insets bottom="25.0" top="60.0" />
            </VBox.margin>
        </Label>
        <Label text="Vorname">
            <font>
                <Font name="Comic Sans MS" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="firstName">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font></TextField>
        <Label text="Nachname">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
            <font>
                <Font size="14.0" />
            </font>
        </Label>
      <TextField fx:id="lastName">
         <font>
            <Font name="Comic Sans MS" size="14.0" />
         </font></TextField>
        <Label text="Segelerfahrung">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
            <font>
                <Font name="Comic Sans MS" size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="experienceChoiceBox" prefWidth="150.0" />
        <Label text="Wunschdatum">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
            <font>
                <Font name="Comic Sans MS" size="14.0" />
            </font>
        </Label>
        <DatePicker fx:id="sailDate" />
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Button onAction="#saveNewSailorButton" prefHeight="25.0" prefWidth="343.0" text="Speichern und zurück">
                <HBox.margin>
                    <Insets top="50.0" />
                </HBox.margin>
            <font>
               <Font name="Comic Sans MS" size="15.0" />
            </font>
            </Button>
        </HBox>
    </children>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="10.0" />
    </padding>
</VBox>
